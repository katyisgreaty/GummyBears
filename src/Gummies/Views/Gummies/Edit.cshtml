@model Gummies.Models.Gummy

@{
    ViewData["Title"] = "Gummi Bear Kingdom";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <h2>Edit</h2>
    <hr />
    <h4>Edit this product: @Html.DisplayFor(model => model.Name)</h4>

    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.GummyId)

        @Html.LabelFor(model => model.Name)
        @Html.EditorFor(model => model.Name)

        @Html.LabelFor(model => model.Cost)
        @Html.EditorFor(model => model.Cost)

        @Html.LabelFor(model => model.Country)
        @Html.EditorFor(model => model.Country)

        @Html.LabelFor(model => model.Image)
        @Html.EditorFor(model => model.Image)

        <input type="submit" value="Save" />
    }
    <p>@Html.ActionLink("Back to Details Page", "Details", new { id = Model.GummyId })</p>
    <p>@Html.ActionLink("Back to list", "Index")</p>
